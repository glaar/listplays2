<div class="row">
  <%= form_for(@user) do |f| %>
    <%= f.label :name %>
    <div class="form-group">
      <%= f.text_field :name %>
    </div>
    <%= f.label :email %>
    <div class="form-group">
      <%= f.text_field :email %>
    </div>

    <%= f.label :password %>
    <div class="form-group">
      <%= f.password_field :password %>
    </div>

    <%= f.label :password_confirmation, "Confirmation" %>
    <div class="form-group">
      <%= f.password_field :password_confirmation %>
    </div>

    <%= f.submit "Create my account", class: "btn btn-primary" %>
  <% end %>
</div>
